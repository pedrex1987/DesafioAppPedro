<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="49dp"
        android:layout_height="64dp">

        <TextView
            android:text="@string/dtVenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtData"
            android:textAlignment="textStart"
            android:textStyle="normal|bold"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="6dp"/>

        <TextView
            android:text="@string/hrVenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtHora"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_below="@+id/txtData"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="8dp"/>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="11dp"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="144dp"
        android:layout_height="63dp"
        android:layout_weight="1">

        <TextView
            android:text="@string/nmCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCliente"
            android:textStyle="normal|bold"
            android:paddingLeft="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="@string/nmVendedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVendedor"
            android:textSize="10sp"
            android:paddingLeft="8dp"
            android:layout_above="@+id/txtCliente"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="11dp"/>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="39dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cart"
            android:id="@+id/imgcart"
            android:src="@drawable/cart"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="11dp"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="115dp"
        android:layout_height="70dp">

        <TextView
            android:text="@string/tipoMoeda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRs"
            android:textColor="@android:color/holo_green_light"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp" />

        <TextView
            android:text="@string/vrVenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtValor"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txtRs"
            android:layout_toRightOf="@+id/txtRs" />

    </RelativeLayout>

</LinearLayout>